###############################################
# Root .htaccess â€“ route to /public safely
###############################################

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Already in /public -> no change
    RewriteRule ^public/ - [L]

    # Root request '/' -> serve public/index.php explicitly
    RewriteRule ^$ public/index.php [L]

    # Common top-level static files
    RewriteRule ^favicon\.ico$ public/favicon.ico [L]
    RewriteRule ^robots\.txt$ public/robots.txt [L]

    # Everything else -> map to /public/*
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Prefer public/index.php as directory index
DirectoryIndex public/index.php
