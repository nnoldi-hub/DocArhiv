###############################################
# Minimal .htaccess for shared hosting (Hostico)
# Keep only rewrite rules to avoid 500 errors
###############################################

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Allow direct access to existing files/folders
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Route everything else to index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>

# Prevent directory listing (safe on most hosts)
Options -Indexes

# Deny access to sensitive file types if any land in public by mistake
<FilesMatch "\.(sql|log|ini|md|json|lock|bak)$">
    Require all denied
</FilesMatch>